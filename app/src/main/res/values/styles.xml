    <style name="StepListDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IngredientListItem" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardActionImageButton" parent="@style/Base.Widget.AppCompat.ActionButton">
