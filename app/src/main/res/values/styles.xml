<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StepListCaption">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="StepListItem" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:padding">2dp</item>
    </style>

    <style name="IngredientListItem" parent="Base.TextAppearance.AppCompat.Small">
    </style>

    <style name="CardActionImageButton" parent="@style/Base.Widget.AppCompat.ActionButton">
    </style>

    <style name="WidgetIngredientItem" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Step Instructions-->
    <style name="StepInstrFullDescription" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="NavigationButtons" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
    </style>

    <style name="TextNetworkError" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

</resources>
