<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Step List-->
    <style name="StepListCaption" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="StepListDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StepListItem" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:padding">2dp</item>
    </style>

    <!--Step Instructions-->
    <style name="StepInstrShortDesc" parent="Base.TextAppearance.AppCompat.Headline">

    </style>

    <style name="StepInstrFullDescription" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="StepInstrStepCounter" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Ingredient List-->
    <style name="IngredientListItem" parent="Base.TextAppearance.AppCompat.Medium">
    </style>

    <!--Recipe List-->
    <style name="CardActionImageButton" parent="@style/Base.Widget.AppCompat.ActionButton">
    </style>

    <!--Widgets-->
    <style name="WidgetIngredientItem" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
