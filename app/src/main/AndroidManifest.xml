<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.and.tim.bakingapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".ui.widget.IngredientsWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/ingredients_list_widget_info"/>
        </receiver>

        <service
            android:name=".ui.widget.IngredientsListWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <service android:name=".ui.widget.IngredientsListService"/>

        <receiver android:name=".ui.widget_step_list.StepsWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/step_list_widget_info"/>
        </receiver>

        <service
            android:name=".ui.widget_step_list.StepListWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <service android:name=".ui.widget_step_list.StepListService"/>


        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.step_list.StepListActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>